  <!DOCTYPE html>
<html lang="en">
<head>
  <title><%= blog.name %> | Biography</title>
  <%- include('./partials/head') %>
  <style>
    body {
      font-family: 'Orbitron', sans-serif;
      margin: 0;
      padding: 0;
     
    }
.back{
       background: url('/awm.png');
       background-size: cover;

}
    .bio-container {

      max-width: 1280px;
      margin: 50px auto;
      border-radius: 20px;
      padding: 40px;
      display: flex;
      gap: 40px;
      align-items: center;
      box-shadow: 0 8px 70px rgba(255, 0, 0, 0.15);
    }

    .bio-text {
      flex: 1;

    }
    .bio-title {
      font-size: 36px;
      font-weight: 900;
      color: #111;
      position: relative;
      display: inline-block;
      margin-bottom: 32px;
      text-transform: uppercase;
    }

    .bio-title::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 70px;
      height: 4px;
      background-color: #ffcc00;
    }

    .bio-info {
      display: flex;
      flex-wrap: wrap;
      gap: 70px;
      margin-bottom: 24px;
      font-size: 14px;
    }

    .bio-info div {
      flex: 1 1 150px;
      text-align: center;
      color: #000000;
      font-size: 20px;
      font-weight: 700;
    }

    .bio-info span {
      display: block;
      font-size: 20px;
      font-weight: 500;
      margin-top: 6px;
      color: #5c0000;
    }

    .bio-description {
      font-size: 16px;
      line-height: 1.6;
      color: #222;
    }

    .bio-image-container {
      flex-shrink: 0;
      position: relative;
    }
 .name{
      font-size: 36px;
      font-weight: 900;
      color: #111;
     padding-bottom: 10px;
      text-transform: uppercase;
    }

    
    .bio-image {
      width: 380px;
      border-radius: 16px;
      border: 3px solid #ffcc00;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    .notch-left,
    .notch-right {
      position: absolute;
      bottom: 0;
      width: 40px;
      height: 6px;
      background-color: #ffcc00;
    }

    .notch-left {
      left: 0;
      border-top-right-radius: 6px;
    }

    .notch-right {
      right: 0;
      border-top-left-radius: 6px;
    }

    @media (max-width: 768px) {
      .bio-container {
        flex-direction: column;
        padding: 20px;
      }

      .bio-image {
        width: 100%;
      }

      .bio-info {
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>
<div class="back">
   <div class="bio-container">
    <!-- Text Section -->
    <div class="bio-text">
      <div class="name">  <h1><%= blog.name %></h1>
       </div>
      <h2 class="bio-title">Biography</h2>

      <div class="bio-info">
        <div>ROLE <span><%= blog.title %></span></div>
        <div>REGION <span><%= blog.region %></span></div>
        <div>AGE <span><%= blog.age %></span></div>
        <div>KD <span><%= blog.kd %></span></div>
        <div>HEADSHOT RATE <span><%= blog.hr %></span></div>
      </div>

      <p class="bio-description"><%= blog.body %></p>
    </div>

    <!-- Image Section -->
    <div class="bio-image-container">
      <img src="<%= blog.coverimageurl %>" class="bio-image" alt="<%= blog.name %>" />
      <div class="notch-left"></div>
      <div class="notch-right"></div>
    </div>
  </div>

 
  <%- include('./partials/comment') %>

       </div> 
  <%- include('./partials/script') %>
</body>
</html>
