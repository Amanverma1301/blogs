<!DOCTYPE html>
<html lang="en">
<head>
        <%- include('./partials/head') %>
<style>
  body{
                  font-family: "Play", sans-serif;
           min-height: 100vh;

  }
 .ff-card {
  width: 280px;
  margin: 20px;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 0 15px rgba(255, 204, 0, 0.3);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  position: relative;
}

.ff-card:hover {
  transform: scale(1.05);
  box-shadow: 0 0 25px rgba(255, 204, 0, 0.6);
}

.ff-card-inner {
  position: relative;
  width: 100%;
  height: 400px;
  border-radius: 20px;
  overflow: hidden;
  background-color: #111;
}

.ff-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Corner accents */
.corner {
  position: absolute;
  background-color: #ffcc00;
  z-index: 3;
}

.top-left {
  top: 0;
  left: 0;
  width: 16px;
  height: 16px;
  border-bottom-right-radius: 5px;
}

.top-right {
  top: 0;
  right: 0;
  width: 16px;
  height: 16px;
  border-bottom-left-radius: 5px;
}

.bottom-left {
  bottom: 0;
  left: 0;
  width: 24px;
  height: 8px;
  border-top-right-radius: 5px;
}

.bottom-right {
  bottom: 0;
  right: 0;
  width: 24px;
  height: 8px;
  border-top-left-radius: 5px;
}

/* Overlay section */
.ff-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  z-index: 4;
  text-align: center;
}

.ff-name {
  font-size: 1.3rem;
  font-weight: bold;
  text-transform: uppercase;
  color: #ffcc00;
  margin: 0;
}

.ff-role {
  font-size: 0.9rem;
  color: #ccc;
  margin-top: 4px;
}

/* NEW tag */
.ff-new {
  display: inline-block;
  margin-top: 8px;
  background-color: #ffcc00;
  color: black;
  padding: 4px 10px;
  font-size: 0.75rem;
  font-weight: bold;
  border-radius: 8px;
}
.btn{
  background-color: rgb(243, 234, 67);
  color: black;
}

</style>
      <title>Document</title>
</head>
<body>

            <%- include('./partials/nav') %> 
<div class="position: relative; width:100%; ">
<img src="/backs.jpg" style="width: 100%; height:300px; object-fit:cover; bottom: 0px; " alt="">
</div>
<a class="h-" href=""></a>
 <div class="container mt-3">
  <div class="row row-cols-4">
      <% blog.forEach(blog =>{ %>
    <div class="ff-card">
  <div class="ff-card-inner">
    
    <!-- Character Image -->
    <img src="<%= blog.coverimageurl %>" alt="<%= blog.name %>" class="ff-img">

    <!-- Yellow corner notches -->
    <div class="corner top-left"></div>
    <div class="corner top-right"></div>
    <div class="corner bottom-left"></div>
    <div class="corner bottom-right"></div>

    <!-- Overlay Content -->
    <div class="ff-overlay">
      <h2 class="ff-name"><%= blog.name %></h2>
      <p class="ff-role"><%= blog.title %></p>
          <a href="/blog/<%=blog._id %>" class="btn btn-primary">view</a>

      <% if (blog.tag === 'new') { %>
        <span class="ff-new">NEW</span>
      <% } %>
    </div>
  </div>
</div>


         <% }) %>
     </div>
</div>
            <%- include('./partials/script') %> 

</body>
</html>